alias c="clear"
alias q="exit"

# TMUX
# attach to a tmux session
alias ta="tmux attach-session -t"
# create a new tmux session with a name
alias tn="tmux new-session -s"
# list all tmux sessions
alias tls="tmux list-sessions"

# function to quickly create a new directory and navigate into it
mkcd() { mkdir -p "$1" && cd "$1"; }

# force delete directory
alias rmd="rm -rf"

# chezmoi
alias cm="chezmoi"

function ctb() {
  if [[ -z "$1" ]]; then
    echo "usage: ctb <template-file>"
    return 1
  fi

  if [[ ! -f "$1" ]]; then
    echo "file not found: $1"
    return 1
  fi

  cm execute-template < "$1" | bat -l bash
}

# yazi
function y() {
  local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
  yazi "$@" --cwd-file="$tmp"
  IFS= read -r -d '' cwd < "$tmp"
  [ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
  rm -f -- "$tmp"
}

# eza
alias ls="eza --icons --group-directories-first"
alias la="eza -a --icons --group-directories-first"
alias ll="eza -la --icons --group-directories-first"
alias lt="eza -aT --icons --group-directories-first"
alias lsd="eza -aD --icons --group-directories-first"
alias lsf="eza -af --icons --group-directories-first"

alias adb='HOME="$XDG_DATA_HOME"/android adb'
alias dosbox='dosbox -conf "$XDG_CONFIG_HOME"/dosbox/dosbox.conf'
